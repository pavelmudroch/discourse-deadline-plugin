<DModal
  @bodyClass="change-timestamp"
  @closeModal={{@closeModal}}
  @flash={{this.flash}}
  @title={{i18n "deadline.set_deadline.title"}}
>
  <:body>
    <p>
      {{i18n "deadline.set_deadline.instructions"}}
    </p>
    <p class="alert alert-error {{unless this.validTimestamp 'hidden'}}">
      {{i18n "deadline.set_deadline.invalid_date"}}
    </p>
    <form>
      <DatePicker
        @value={{readonly this.date}}
        @containerId="date-container"
        @onSelect={{action (mut this.date)}}
      />
      <Input @type="time" @value={{this.time}} />
    </form>
    <div id="date-container"></div>
  </:body>
  <:footer>
    <DButton
      class="btn-primary"
      @disabled={{this.buttonDisabled}}
      @action={{this.setDeadline}}
      @label={{if this.saving "deadline.set_deadline.saving" "deadline.set_deadline.action"}}
    />
  </:footer>
</DModal>
